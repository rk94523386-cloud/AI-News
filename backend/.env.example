# Backend environment variables example - DO NOT COMMIT SECRETS

# Port for the backend server (used when running standalone)
PORT=5000

# Node environment
NODE_ENV=development

# Set to true to skip Vite dev middleware during local development
# Useful when Vite cannot start or in CI
SKIP_VITE=true

# RUN_STANDALONE=true will make the server listen on PORT when running locally
# For Vercel deployment, do NOT set RUN_STANDALONE
RUN_STANDALONE=true

# Example for external API keys (do NOT commit real values)
# NEWS_API_KEY=
